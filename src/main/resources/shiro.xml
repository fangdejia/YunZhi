<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--shiro缓存管理器-->
    <bean id="shiroCacheManager" class="org.apache.shiro.cache.ehcache.EhCacheManager">
        <property name="cacheManager" ref="ehcacheManager"/>
    </bean>

    <!--凭证匹配器-->
    <bean id="credentialsMatcher" class="com.skylaker.yunzhi.config.CredentialsMatcher">
        <!--注入缓存管理器-->
        <constructor-arg ref="shiroCacheManager"/>
        <!--密码加密方法-->
        <property name="hashAlgorithmName" value="md5"/>
        <!--密码加密几次-->
        <property name="hashIterations" value="3"/>
        <!--是否存储散列后的密码为16进制-->
        <property name="storedCredentialsHexEncoded" value="true"/>
    </bean>

    <!--Realm实现-->
    <bean id="userRealm" class="com.skylaker.yunzhi.config.UserRealm">
        <property name="credentialsMatcher" ref="credentialsMatcher"/>
    </bean>

    <!--安全管理器-->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realm" ref="userRealm"/>
    </bean>

    <!--记住我设置管理器-->
    <bean id="rememberMeManager" class="org.apache.shiro.web.mgt.CookieRememberMeManager">
        <property name="cookie" ref="rememberMeCookie"/>
    </bean>

    <!--记住我cookie-->
    <bean id="rememberMeCookie" class="org.apache.shiro.web.servlet.SimpleCookie">
        <!--cookie名称-->
        <constructor-arg value="REMEMBERME"/>
        <!--有效时间，单位秒 这里设置一周-->
        <property name="maxAge" value="604800"/>
    </bean>

    <!-- Shiro的web过滤器 -->
    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <!--管理器-->
        <property name="securityManager" ref="securityManager"/>
        <!--拦截跳转到的地址-->
        <property name="loginUrl" value="login/login.do" />
        <!--没有权限操作时指定路径-->
        <property name="unauthorizedUrl" value="login/login.do"/>
        <!--资源请求拦截配置-->
        <property name="filterChainDefinitions">
            <value>
                <!--/admin/** = roles[admin]-->
                <!--/user/** = roles[user]-->

                <!--静态资源匿名访问-->
                /assets/** = anon

                <!--登录页面、注册不拦截-->
                /login.jsp = anon
                /register/** = anon
                /login/** = anon

                <!--请求注销地址，shiro清除session-->
                /logout.do = logout

                <!--所有URL都必须认证通过才可以访问-->
                /** = authc
            </value>
        </property>
    </bean>

    <bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor"/>
</beans>